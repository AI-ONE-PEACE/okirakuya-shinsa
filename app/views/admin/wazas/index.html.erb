<h1>技一覧（管理）</h1>
<p><%= link_to "新規作成", new_admin_waza_path %></p>
<table border="1" cellspacing="0" cellpadding="6">
  <thead>
    <tr>
      <th>段位</th><th>順</th><th>種別</th><th>審査項目</th><th>動画</th><th></th>
    </tr>
  </thead>
  <tbody>
    <% @wazas.each do |w| %>
      <tr>
        <td><%= w.rank.name %></td>
        <td><%= w.order_in_rank %></td>
        <td><%= I18n.t("enums.waza.shinsa_set.#{w.shinsa_set}") %></td><!-- ja.yml を入れれば _i18n も可 -->
        <td><%= w.koumoku %></td>
        <td>
          <% if w.video&.url.present? %>
            <a href="<%= w.video.url %>" target="_blank" rel="noopener">リンク</a>
          <% end %>
        </td>
        <td>
          <%= link_to "編集", edit_admin_waza_path(w) %> |
          <%= link_to "削除", admin_waza_path(w), data: { turbo_method: :delete, turbo_confirm: "削除しますか？" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
