<% if resource.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <div class="fw-bold mb-1">入力内容を確認してください（<%= resource.errors.count %>件）</div>
    <ul class="mb-0 ps-3">
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
