<!DOCTYPE html>
<html>
<head>
  <title>お氣楽やアプリ</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
</head>

<body>
  <%= render 'layouts/header' %>

  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

  <nav>
    <%= link_to "ホーム", root_path %>

    <% if user_signed_in? %>
      <p>ようこそ、<%= current_user.email %>さん！</p>

      <% if current_user.admin? %>
        | <%= link_to "会員一覧", admin_members_path %>
        | <%= link_to "会員登録", new_admin_member_path %>
        | <%= link_to "管理", admin_root_path %>
      <% end %>

      <%= button_to "ログアウト", destroy_user_session_path, method: :delete,
          form: { "data-turbo-confirm": "ログアウトしますか？" },
          class: "btn btn-outline-secondary" %>
    <% else %>
      | <%= link_to "ログイン", new_user_session_path, class: "btn btn-outline-primary" %>
    <% end %>
  </nav>

  <%= yield %>
  <%= render 'layouts/footer' %>

  <!-- Bootstrap (CDN) -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" defer></script>
</body>
</html>
