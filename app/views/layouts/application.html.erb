<!DOCTYPE html>
<html>
<head>
 <%= favicon_link_tag "okiraku_favicon.ico", rel: "icon", type: "image/png", sizes: "32x32" %>
  <title>お氣楽やアプリ</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_importmap_tags %>
</head>

<script>
  document.addEventListener('turbo:load', function () {
    document.querySelectorAll('[data-bs-toggle="dropdown"]').forEach(function (el) {
      if (!bootstrap.Dropdown.getInstance(el)) {
        new bootstrap.Dropdown(el);
      }
    });
  });
</script>

<body class="bg-light">
  <%= render 'layouts/header' %>

  <div class="container py-3">
    <% if notice.present? %>
      <p class="alert alert-success text-center mx-auto mb-2" style="max-width:960px;"><%= notice %></p>
    <% end %>
    <% if alert.present? %>
      <p class="alert alert-warning text-center mx-auto mb-4" style="max-width:960px;"><%= alert %></p>
    <% end %>

    <main class="mx-auto px-2" style="max-width:960px;">
      <%= yield %>
    </main>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" defer></script>
</body>
</html>
