.hero {
  position: relative;
  min-height: 60vh;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 4rem 1rem;
  background-size: cover;
  background-position: center 40%;
  background-repeat: no-repeat;
}
.hero::after {
  content: "";
  position: absolute;
  inset: 0;
  background: linear-gradient(rgba(0,0,0,.45), rgba(0,0,0,.45));
}
.hero-inner { position: relative; z-index: 1; color: #fff; text-align: center; }
.hero .lead { opacity: .95; }

/* バリエーション：未ログイン（トップ） */
.hero--guest  { background-image: url(<%= asset_path "okirakuya_top.png"  %>); }

/* バリエーション：ログイン後 */
.hero--signed { background-image: url(<%= asset_path "okirakuya_hero.png" %>); }
